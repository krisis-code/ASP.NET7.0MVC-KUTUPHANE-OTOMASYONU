@model BookGenres

<form method="post">

	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Kitap Türü Silme</h2>
			</hr>
		</div>

		<div class="mb-3">
			<label asp-for="BookGenreName" class="p-0"></label>
			<input asp-for="BookGenreName" class="form-control" />
			<span asp-validation-for="BookGenreName" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Türü Sil</button>

		<a asp-controller="BookGenres" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
			Kitap Türlerine Geri Dön
		</a>

	</div>

</form>
