@using KitapKiralamaOtomasyonu.Models
@model Borrow

<form method="post">

	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Kitap Türü Ekle</h2>
			</hr>
		</div>

		<div class="mb-3">
			<label asp-for="UserId" class="p-0"></label>
			<input asp-for="UserId" class="form-control" />
			<span asp-validation-for="UserId" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="BookId" class="p-0"></label>
			<select asp-for="BookId" asp-items="ViewBag.BookList" class="form-select">
			</select>
		</div>
		<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap  Sil</button>

		<a asp-controller="Borrow" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
			Kitap sayfasına Geri Dön
		</a>

	</div>

</form>
