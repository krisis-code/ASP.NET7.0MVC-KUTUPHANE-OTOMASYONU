@using KitapKiralamaOtomasyonu.Models
@model List<Book>
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<div class="text-center">
    <h1 class="display-4">Hoşgeldiniz</h1>
 

<div class="text-center">
    <h1 class="display-4">Kitap Önerileri</h1>
</div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <!-- Ortalamak için -->
        @foreach (var book in Model.Take(2))
        {
            <div class="col-md-4 mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@book.ImageUrl" class="card-img-top" alt="Book Image" style="width: 150px; height:200px">
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body" style="padding-top: 0;">
                                <h5 class="card-title">@book.BookName</h5>
                                <p class="card-text" style="margin-bottom: 0">
                                    Özet :
                                    @{
                                        if (book.Description.Length > 100)
                                        {
                                            @book.Description.Substring(0, Math.Min(100, book.Description.Length))
                                        }
                                        else
                                        {
                                            @book.Description
                                        }
                                    }
                                </p>
                                <p class="card-text" style="margin-bottom: 0">Yazar: @book.Writer</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr> <!-- Çizgi eklendi -->
    <div class="row justify-content-center">
        <!-- Ortalamak için -->
        @foreach (var book in Model.Skip(2))
        {
            <div class="col-md-4 mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@book.ImageUrl" class="card-img-top" alt="Book Image" style="width: 150px; height:200px">
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body" style="padding-top: 0;">
                                <h5 class="card-title">@book.BookName</h5>
                                <p class="card-text" style="margin-bottom: 0">Özet : 
                                    @{
                                        if (book.Description.Length > 100)
                                        {
                                            @book.Description.Substring(0, Math.Min(100, book.Description.Length))
                                        }
                                        else
                                        {
                                            @book.Description
                                        }
                                    }
                                </p>
                                <p class="card-text" style="margin-bottom: 0">Yazar: @book.Writer</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
